{
  "name": "contracts",
  "version": "0.0.2",
  "description": "KESX smart contracts",
  "main": "index.js",
  "scripts": {
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "node": "hardhat node",
    "solhint": "solhint 'contracts/**/*.sol'",
    "size": "npx hardhat size-contracts",
    "prepare": "husky",
    "docs": "hardhat docgen",
    "release": "release-it",
    "deploy": "hardhat ignition deploy ./ignition/modules/KESX.ts",
    "deploy:local": "hardhat ignition deploy ./ignition/modules/KESX.ts --network localhost",
    "deploy:testnet": "hardhat ignition deploy ./ignition/modules/KESX.ts --network sepolia",
    "deploy:mainnet": "hardhat ignition deploy ./ignition/modules/KESX.ts --network mainnet",
    "deploy:custom": "hardhat ignition deploy ./ignition/modules/KESX.ts --parameters",
    "deploy:upgradeable": "hardhat run scripts/deploy-upgradeable.ts",
    "deploy:upgradeable:local": "hardhat run scripts/deploy-upgradeable.ts --network localhost",
    "deploy:upgradeable:testnet": "hardhat run scripts/deploy-upgradeable.ts --network sepolia",
    "deploy:upgradeable:mainnet": "hardhat run scripts/deploy-upgradeable.ts --network mainnet",
    "deploy:GBPX:testnet": "hardhat run scripts/deploy-GBPX-upgradeable.ts --network sepolia",
    "upgrade": "hardhat run scripts/upgrade.ts",
    "upgrade:local": "hardhat run scripts/upgrade.ts --network localhost",
    "upgrade:testnet": "hardhat run scripts/upgrade.ts --network sepolia",
    "upgrade:mainnet": "hardhat run scripts/upgrade.ts --network mainnet",
    "verify:implementation": "hardhat verify --network sepolia 0x3d7c1cfb36f394000406bb24f3d37f602acbd83e",
    "verify:proxy": "hardhat verify --network sepolia 0xc1bF2DD5Dd1a0D4CdAd5bDD749BA23e228A7b170"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "^0.15.11",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "hardhat": "^2.24.3",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "prettier-plugin-solidity": "^1.4.2",
    "pretty-quick": "^4.1.1",
    "release-it": "^19.0.1",
    "solidity-coverage": "^0.8.15",
    "solidity-docgen": "^0.6.0-beta.36",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.3.0",
    "@openzeppelin/contracts-upgradeable": "^5.3.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.0",
    "dotenv": "^16.5.0",
    "eslint-plugin-prettier": "^5.2.6"
  }
}
